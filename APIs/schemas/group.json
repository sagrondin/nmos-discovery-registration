{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a Group",
  "title": "Group resource",
  "allOf": [{
      "$ref": "resource_core.json"
    },
    {
      "type": "object",
      "required": [
        "resource_type",
        "members",
        "node_id"
      ],
      "properties": {
        "resource_type": {
          "description": "Type of the resources refered to in members",
          "type": "string",
          "enum": [
            "group",
            "sender",
            "receiver",
            "flow",
            "device",
            "node",
            "source"
          ]
        },
        "members": {
          "description": "UUIDs representing the IDs of resources to be grouped together by this group",
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        },
        "node_id": {
          "description": "Globally unique identifier for the Node which initially created the group",
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
        }
      }
    }
  ]
}